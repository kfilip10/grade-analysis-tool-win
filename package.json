{
  "name": "Grade-Analysis-Tool",
  "version": "1.0.9",
  "description": "Test using EB and yarn",
  "main": "src/index.js",
  "repository": "https://github.com/kfilip10/grade-analysis-tool-win",
  "author": "Kevin Filip",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=always"
  },
  "build": {
    "appId": "com.pane",
    "productName": "Grade Analysis Tool",
    "publish": [
      {
        "provider": "github",
        "owner": "kfilip10",
        "repo": "yarn2",
        "private": false,
        "releaseType": "draft"
      }
    ],
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "publish": [
        {
          "provider": "github",
          "owner": "kfilip10",
          "repo": "grade-analysis-tool-win",
          "private": false,
          "releaseType": "draft"
        }
      ]
    },
    "nsis": {
      "include": "build/installer.nsh",
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "menuCategory": true,
      "shortcutName": "Grade Analysis Tool"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "dependencies": {
    "electron-builder-squirrel-windows": "^24.10.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
