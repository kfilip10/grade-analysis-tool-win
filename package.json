{
  "name": "grade-analysis-tool",
  "version": "1.7.5",
  "type": "module",
  "description": "Analyzes grades from Canvas, now with Gradescope support!",
  "main": "src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/kfilip10/grade-analysis-tool-win.git"
  },
  "author": "Kevin Filip",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "echo Running Electron... && electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=always"
  },
  "build": {
    "asar": false,
    "appId": "com.pane",
    "productName": "Grade Analysis Tool",
    "extraResources": [
      "src/**/*"
    ],
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "publish": [
        {
          "provider": "github",
          "owner": "kfilip10",
          "repo": "grade-analysis-tool-win",
          "private": false
        }
      ]
    },
    "nsis": {
      "include": "build/installer.nsh",
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "menuCategory": true,
      "shortcutName": "Grade Analysis Tool"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "dependencies": {
    "axios": "^1.6.3",
    "electron-log": "^5.0.3",
    "electron-updater": "^6.1.7",
    "esm": "^3.2.25",
    "execa": "^5.1.1",
    "fs": "^0.0.1-security"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/plugin-transform-async-to-generator": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.35.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fs-extra": "^11.1.0"
  },
  "packageManager": "yarn@1.22.21+sha1.1959a18351b811cdeedbd484a8f86c3cc3bbaf72"
}
